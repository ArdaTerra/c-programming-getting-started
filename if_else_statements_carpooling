#include <stdio.h>
int main() 
{
    int num = 0;
    double cost = 0.0;
    scanf("%d %lf", &num, &cost);
    int alone = num == 0;
    if(alone)
    {
        printf("%.2lf", cost);
    }
    else
    {
        cost = cost + 1; 
        printf("%.2lf", cost/(num+1));
    }
    return 0;
}


/*50% score answer*/

#include <stdio.h>
int main()
{
    int num = 0;
    double cost;
    scanf("%d %lf", &num, &cost);
    if(num)
    {
        printf("%.2lf", cost);
    }
    else
    {
        printf("%.2lf", cost/(num+1));
    }
    return 0;
}
