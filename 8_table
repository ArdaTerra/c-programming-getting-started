#include <stdio.h>

int main(void)
{
    int i, num, times;
    num = 8;
    times = 0;
    for(i=0; i<11; i++)
    {
        printf("%dx%d = %d\n", times, num, times*num);
        times = times + 1;
    }
    return 0;
}

/*second way to code it:*/ 

#include <stdio.h>

int main(void)
{
    int i = 1;
    int num = 0;
    for(i=0; i<11; i++)
    {
        printf("%dx8 = %d\n", num, (num*8));
        num = num + 1;
    }
    return 0;
}

/*third way to code it*/

#include <stdio.h>

int main(void)
{
    int i = 0; 
    int b = 8; 
    for (i = 0; i<=10; i++) 
    { 
        printf("%dx%d = %d\n",i,b,i*8); 
    } 
    return 0; 
}
